<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgindex"
    android:orientation="vertical"
    tools:context=".activity.AddSceneActivity">

    <EditText
        android:id="@+id/et_add_scene_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_20"
        android:background="@color/white"
        android:hint="场景名称"
        android:lines="1"
        android:textSize="@dimen/sp_16"
        android:padding="@dimen/dp_10" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_scene_setting_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/changjing1"
            />
        <TextView
            android:id="@+id/tv_add_scene_icon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="选择图标"
            android:textSize="@dimen/sp_16"
            android:layout_marginLeft="10dp"
            android:background="#fff"
            />
    </LinearLayout>
    <EditText
        android:id="@+id/et_add_scene_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_20"
        android:background="@color/white"
        android:hint="分组号"
        android:inputType="number"
        android:lines="1"
        android:textSize="@dimen/sp_16"
        android:padding="@dimen/dp_10" />
    <TextView
        android:id="@+id/tv_add_scene_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@color/white"
        android:text="场景号"
        android:textSize="@dimen/sp_16"
        android:padding="@dimen/dp_10" />
    <TextView
        android:id="@+id/tv_add_scene_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_20"
        android:background="@color/textcolor"
        android:text="确认"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:textSize="@dimen/sp_16"
        android:padding="@dimen/dp_10" />
</LinearLayout>