<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.FSActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_fs_power"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/selector_menu"
            android:gravity="center"
            android:padding="@dimen/dp_20"
            android:text="开关"
            android:textColor="#A96035" />

        <TextView
            android:id="@+id/tv_fs_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/selector_menu"
            android:gravity="center"
            android:padding="@dimen/dp_20"
            android:text="定时"
            android:textColor="#000" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_fs_speed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/selector_menu"
            android:gravity="center"
            android:padding="@dimen/dp_20"
            android:text="风速"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tv_fs_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/selector_menu"
            android:gravity="center"
            android:padding="@dimen/dp_20"
            android:text="风类"
            android:textColor="#000" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_fs_baifeng"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/selector_menu"
            android:gravity="center"
            android:padding="@dimen/dp_20"
            android:text="摆风"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tv_fs_novoice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/selector_menu"
            android:gravity="center"
            android:padding="@dimen/dp_20"
            android:text="静音"
            android:textColor="#000" />
    </LinearLayout>
</LinearLayout>