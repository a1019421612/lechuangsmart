<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.JDHActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_jdh_power"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/selector_menu"
            android:gravity="center"
            android:padding="@dimen/dp_20"
            android:textColor="#A96035"
            android:text="开关" />

        <TextView
            android:id="@+id/tv_jdh_menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/selector_menu"
            android:gravity="center"
            android:padding="@dimen/dp_20"
            android:textColor="#000"
            android:text="菜单" />

        <TextView
            android:id="@+id/tv_jdh_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/selector_menu"
            android:gravity="center"
            android:padding="@dimen/dp_20"
            android:textColor="#000"
            android:text="数字键" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_jdh_novoice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/selector_menu"
            android:gravity="center"
            android:padding="@dimen/dp_20"
            android:textColor="#000"
            android:text="静音" />
        <TextView
            android:id="@+id/tv_jdh_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/selector_menu"
            android:gravity="center"
            android:padding="@dimen/dp_20"
            android:textColor="#000"
            android:text="退出" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/selector_menu"
            android:gravity="center"
            android:padding="@dimen/dp_20"
            android:textColor="#000"
            android:text="菜单"
            android:visibility="invisible"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/shap_btn_menu"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_jdh_channel_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="⇧"
                android:textColor="#000"
                android:background="@drawable/selector_menu"
                android:textSize="30sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="@dimen/dp_10"
                android:text="频道"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tv_jdh_channel_down"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="⇩"
                android:background="@drawable/selector_menu"
                android:textColor="#000"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:visibility="invisible"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_menu"
                android:gravity="center_horizontal"
                android:text="♖"
                android:textSize="30sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text=""
                android:textSize="30sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_menu"
                android:gravity="center_horizontal"
                android:text="↻"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/shap_btn_menu"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_jdh_voice_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="⇧"
                android:background="@drawable/selector_menu"
                android:textColor="#000"
                android:textSize="30sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="@dimen/dp_10"
                android:text="音量"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tv_jdh_voice_down"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/selector_menu"
                android:text="⇩"
                android:textColor="#000"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>
    <com.hbdiye.lechuangsmart.views.RoundMenuView
        android:id="@+id/roundMenuView"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="200dp"
        android:layout_height="200dp" />
</LinearLayout>