<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/toolbar_ll"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_base_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/back"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    />
                <TextView
                    android:id="@+id/tv_base_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="---"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/size_20"
                    />
                <ImageView
                    android:id="@+id/iv_base_right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/edit"
                    android:paddingRight="10dp"
                    android:visibility="invisible"
                    android:paddingLeft="10dp"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bgindex"
            android:orientation="vertical"
            android:padding="20dp">
            <LinearLayout
                android:id="@+id/ll_device_triggered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:background="#fff"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="触发设备"
                    android:textColor="#000"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/shebei1"
                    />
                <TextView
                    android:id="@+id/tv_device_trig_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="---"
                    android:textColor="#000"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/right"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:text="关联属性"
                android:textColor="#000"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#fff"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e8e8e8"/>
            <TextView
                android:id="@+id/tv_device_trig_attr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="@dimen/dp_10"
                android:text="---"
                android:drawableRight="@mipmap/down"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:text="联动判断条件"
                android:textColor="#000"
                android:padding="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e8e8e8"/>
            <TextView
                android:id="@+id/tv_device_trig_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:text="---"
                android:background="#fff"
                android:drawableRight="@mipmap/down"
                />
            <EditText
                android:id="@+id/et_device_trig_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:inputType="number"
                android:hint="联动条件值"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        android:layout_gravity="end"
        >
        <TextView
            android:id="@+id/tv_drawer"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#455A64"
            android:text="设备列表"
            android:paddingLeft="20dp"
            android:textColor="#fff"
            android:textSize="30sp"
            android:gravity="center_vertical"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_device_trig"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>